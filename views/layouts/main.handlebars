<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vertsa Play</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
      <div class="container">
        <div class="navbar-brand">
          <img
            src="/img/vertsaplay_logo.jpg"
            alt="Logo"
            width="30"
            height="24"
            class="d-inline-block align-text-top"
          />
          Vertsa Play
        </div>
        <ul class="navbar-nav">
          <li class="nav-item ps-3"><a href="/" class="nav-link">Home</a></li>
          {{#unless nome}}
            <li class="nav-item ps-3"><a
                href="/utilizadores/login"
                class="nav-link"
              >Login</a></li>
          {{/unless}}
          {{#if nome}}
            <li class="nav-item ps-3"><a
                href="/utilizadores/showUsers"
                class="nav-link"
              >Mostrar Utilizadores</a></li>
            <li class="nav-item ps-3"><a
                href="/ferias/showFerias"
                class="nav-link"
              >Mostrar Férias</a></li>
            <li class="nav-item ps-3"><a
                href="/ferias/marcarFerias"
                class="nav-link"
              >Marcar Férias</a></li>
            {{#if tipo}}
              <li class="nav-item ps-3"><a
                  href="/utilizadores/createUser"
                  class="nav-link"
                >Adicione um utilizador</a></li>
              <li class="nav-item ps-3"><a
                  href="/utilizadores/deleteUsers"
                  class="nav-link"
                >Remover Utilizadores</a></li>
            {{/if}}
            <li class="nav-item ms-auto ps-2"><a
                href="/utilizadores/logout"
                class="nav-link"
              >Logout</a></li>
          {{/if}}
        </ul>
        {{#if nome}}
          <span class="navbar-text" id="listname">Bem Vindo,
            {{nome}}!</span>
        {{/if}}
      </div>
    </nav>

    <div class="container">
      {{{body}}}
    </div>
  </body>
</html>